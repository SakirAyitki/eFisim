{
  "expo": {
    "name": "eFisim",
    "slug": "eFisim",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "assets/images/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Bu uygulama QR kodları taramak için kameraya erişim gerektirir."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "assets/images/icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.efisim.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Bu uygulama QR kodları taramak için kameraya erişim gerektirir.",
          "microphonePermission": "Bu uygulama QR kodları taramak için mikrofona erişim gerektirir.",
          "recordAudioAndroid": true
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "2a93919c-0bc5-4b46-9642-fde278a4614c"
      }
    }
  }
}
